extends layout.pug

block title
    title Lindat Billing: Recover Password

block content
    .section
    .row.container.center
        .col.z-depth-6.card-panel.s10.offset-s1.m8.offset-m2.l6.offset-l3
            .section
            //i.material-icons.medium.prefix account_circle
            h5 Recover Password
            if error
                .red-text
                    strong= error
            .section
            .divider
            .section
            form(action=locals.baseUrl+"forget-password" method="post" enctype="application/x-www-form-urlencoding")
                .row
                    .input-field.col.s10.offset-s1
                        i.material-icons.prefix mail_outline
                        input#email.validate(name="email" type="text" required="" aria-required="true")
                        label(for="email") Email Address
                        span.helper-text(data-error="Invalid Email")
                .row
                    .input-field.col.s10.offset-s1
                        button.btn.grey.waves-effect.col.s12.white-text(type="submit")
                            strong Reset Password
            .section