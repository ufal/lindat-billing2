ul#slide-out.sidenav.sidenav-fixed
    li
        nav.grey.darken-1.row
            .nav-wrapper.col.s12
                a.brand-logo.hide-on-med-and-down(href=".") Lindat Billing
    if user
        li.hide-on-large-only
            ul.collapsible.collapsible-accordion
                li.bold.active
                    a.collapsible-header.waves-effect(href="#")
                        span(style="font-weight: bolder;")= user.first_name + ' ' + user.last_name
                    .collapsible-body
                        ul
                            li
                                a(href="logout")
                                    i.material-icons logout
                                    span LogOut
    li
        ul.collapsible.collapsible-accordion
            li.bold.active
                a.collapsible-header.waves-effect(href="#")
                    i.material-icons person
                    span(style="font-weight: bolder;") User Panel
                .collapsible-body
                    ul
                        li(class=user_dashboard_active?'active':'')
                            a.waves-effect(href="user/dashboard")
                                i.material-icons dashboard
                                span Overview
                        li(class=endpoints_active?'active':'')
                            a.waves-effect(href="endpoints")
                                i.material-icons settings_input_component
                                span Endpoints
    if user && user.is_admin
        li
            ul.collapsible.collapsible-accordion
                li.bold.active
                    a.collapsible-header.waves-effect(href="#")
                        i.material-icons settings
                        span(style="font-weight: bolder;") Admin Panel
                    .collapsible-body
                        ul
                            li(class=admin_dashboard_active?'active':'')
                                a.waves-effect(href="admin/dashboard")
                                    i.material-icons dashboard
                                    span Admin Overview
                            li(class=services_active?'active':'')
                                a.waves-effect(href="admin/services")
                                    i.material-icons important_devices
                                    span Services
                            li(class=users_active?'active':'')
                                a.waves-effect(href="admin/users")
                                    i.material-icons people
                                    span Users
                            li(class=ips_active?'active':'')
                                a.waves-effect(href="admin/ips")
                                    i.material-icons my_location
                                    span IPs
                            li.hide(class=pricing_active?'active':'')
                                a.waves-effect(href="admin/pricing")
                                    i.material-icons money
                                    span Pricing
                            li(class=logmanagement_active?'active':'')
                                a.waves-effect(href="admin/logmanagement")
                                    i.material-icons list
                                    span Log Management



